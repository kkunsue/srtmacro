{
  "manifest_version": 2,
  "name": "민족 반역 도우미",
  "description": "Bandai Macro",
  "version": "1.0.0",
  "permissions": [
    "https://www.bandaimall.co.kr/"
  ],
  "icons": {
      "128": "images/icon128.png"
  },
  "content_scripts": [ {
    "all_frames": true,
    "js": ["jquery-1.11.0.min.js", "content.js"],
    "matches": ["https://www.bandaimall.co.kr/*"],
    "run_at": "document_end"
  }],
  "background": {
    "page": "background.html"
  },
  "web_accessible_resources": [
    "images/btn_start.png", "images/btn_stop.png", "assets/tada.mp3"
  ]
}
